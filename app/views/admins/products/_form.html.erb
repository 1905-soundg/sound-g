<%= form_for @product, url:admins_products_path do |f| %>

<div class="container">
	<div class="row">


<div class="col-lg-2">
</div>

		<div class="col-lg-4">



	<div class="filed", style="padding-bottom: 50px;">
		<div class="col-md-4">
			<%= f.label :album, "アルバム名" %>
		</div>
		<div class="col-md-8">
			<%= f.text_field :album %>
		</div>
	</div>

	<div class="filed", style="padding-bottom: 30px;">
		<div class="col-md-4">
			<%= f.label :genre, "ジャンル" %>
		</div>
		<div class="col-md-8">
		<%= f.collection_select :genre_id, Genre.all, :id, :genre %>
	</div>
	</div><br>



	<div class="filed", style="padding-bottom: 30px;">
		<div class="col-md-4">
			<%= f.label :label, "レーベル" %>
		</div>
		<div class="col-md-8">
		<%= f.collection_select :label_id, Label.all, :id, :label %>
	</div>
	</div><br>

	<div class="filed", style="padding-bottom: 30px;">
		<div class="col-md-4">
			<%= f.label :image, "CD画像" %>
		</div>
		<div class="col-md-8">
		<%= f.attachment_field :image %>
	</div>
	</div><br>

</div>

<div class="col-lg-6">

<div class="filed">
	<%= f.label :price, "価格" %><br>
	<%= f.number_field :price %>
</div><br>



	<div class="filed">
		<%= f.label :stock_quantity, "在庫数" %><br>
		<%= f.number_field :stock_quantity %>
	</div><br>


	<div class="filed">
		<%= f.label :sales_status, "販売ステータス" %><br>
		<%= f.text_field :sales_status %>
	</div><br>

</div>
</div>
</div>



<div id="discs">
	<%= f.fields_for :discs do |disc| %>
	<%= render 'disc_fields', f: disc %>
<% end %>
</div>

<div id="links">
	<%= link_to_add_association "ディスク追加", f, :discs, class: "btn btn-success" %>
</div><br>

<%= f.submit "商品登録", class: "btn btn-success btn-lg active" %><br>

<% end %>