<div class="nested-fields form-inline">
	<div class="form-group" style="padding-bottom: 30px; padding-left: 25px; padding-right: 20px;" >
		<%= f.text_field :title %>
	</div>

	<div class="form-group" style="font-size: 18px; padding-bottom: 30px; padding-right: 20px;">
		<%= f.label :track_number, "トラックNo." %>
		<%= f.text_field :track_number %>
	</div>

	<div class="form-group" style="font-size: 18px; padding-bottom: 30px; padding-right: 20px;">
		<%= f.label :artist, "アーティスト" %>
		<%= f.select :artist_id, Artist.all.map{|a| [a.artist, a.id]}, { include_blank: true }, {class: 'js-searchable'} %>
		<%= link_to_remove_association "楽曲削除", f, class: "btn btn-danger" %>
	</div>

</div>