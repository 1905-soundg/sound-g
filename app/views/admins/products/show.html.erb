<%= form_for @product do |f| %>

<div class="container">
  <div class="row">
<%= render 'layouts/header' %>

      <div class="col-xs-1">
     </div>

    <div class="col-xs-6" >
      <div style="margin: 40px">
        <%= attachment_image_tag @product,:image, :fill,400,400 %>
      </div>

      <% if @product.favorited_by?(current_user) %>
          <%= link_to product_favorites_path(@product), method: :delete do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= @product.favorites.count %> いいね
          <% end %>
      <% else %>
          <%= link_to product_favorites_path(@product), method: :post do %>
            <i class="fa fa-heart-o" aria-hidden="true"></i>
            <%= @product.favorites.count %> いいね
          <% end %>
      <% end %>

    </div>

     <div class="col-xs-4" style="margin-top: 40px">


      <%= f.label :genre, "ジャンル" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :genre %><br>

      <div style="margin-top: 10px;">
      <%= f.label :album, "アルバム名" %>
      </div>
      <div style="margin-bottom: 20px;">
      <h2> <%= f.text_field :album %> </h2>
      </div>

      <div style="margin-bottom: 20px;">
      <%= f.collection_select :label_id, Label.all, :id, :label %>
      </div>
      <p> ¥<%= f.number_field :price %> </p>


      <%= f.label :image, "CD画像(アップデート後に画像変更)" %>
      <%= f.attachment_field :image %>


      <div class="col-xs-1">
     </div>
</div>



<div class="row">
  <div class="col-md-10 col-md-offset-1" >
    <div class="d-center-block">

      <div id="discs">
        <%= f.fields_for :discs do |disc| %>
          <%= render 'disc_fields', f: disc %>
        <% end %>
        </div>

        <div id="links">
          <%= link_to_add_association "ディスク追加", f, :discs, class: "btn btn-success" %>
        </div><br>

        <%= render 'admins/reviews/reviews' %>
    </div>
  </div>
</div>

<% end %>
