<h3>みんなのレビュー</h3>
<% @reviews.each do |review| %>

<table class="table table-bordered">
	<tbody>
		<tr>
			<td width="15%"> <%= review.user.first_name %> </td>
			<td> <%= review.review %></td>
	      <%= button_to "編集", edit_review_path(review.id), class: "btn btn-default" %>
			  <%= button_to "削除", review_path(review.id), method: :delete %>
		</tr>
	</tbody width="85%">
</table>

<% end %>
