<div class="container">
	<div class="row">


    <% if notice %>
            <div class="alert alert-info alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert">
                <span class="sr-only">close</span>
              </button>
              <%= notice %>
            </div>
        <% end %>
        <% if alert %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span class="sr-only">close</span>
          </button>
          <%= alert %>
        </div>
    <% end %>


    <div class="col-md-8 col-md-offset-2" >
      <div class="d-center-block">

	       <h1>レビュー編集</h1>


         <%= form_for @review, url: admins_product_review_path(id: @review.id) do |review| %>

         <h4>ユーザー名： <%= @user.last_name %>  <%= @user.first_name %></h4>
         <%= review.text_area :review, size: "80x10" %>



      	<div style="margin: 10px 0 10px 0;">
          <%= review.submit "編集", class: "btn btn-default" %>
        </div>

        <div style="margin-bottom: 10px;">
          <%= link_to "削除", admins_product_review_path(review), class: "btn btn-danger", method: :delete %><br>
        </div>

        <div style="margin-bottom: 10px;">
          <%= link_to "商品詳細ページに戻る", admins_product_path(id: @product.id), class: "btn btn-default" %><br>
        </div>

        <% end %>


    </div>
	</div>
</div>