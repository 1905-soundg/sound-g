<div class="container">
<div class="row">
<div class="col-md-8 col-md-offset-2">
<% if @carts.blank? %>
	<div class="row">
		<h1 class="text-center" style="margin: 50px 0px;">カートが空です</h1>
	</div>
<div class="col-md-6 col-md-offset-3">
	<div>
	 	<%= link_to "戻る", root_path, class: "btn btn-default btn-block" %>
	</div>
</div>
</div>
</div>
</div>


	<% else %>
	<h1>カート内容</h1>
		<table class="table">
				<tbody>
					<% @carts.each do |cart| %>
					<tr>

						<td><div class="center-block" style="margin-top: 10px;margin-bottom: 10px;"><%= attachment_image_tag cart.product, :image, :fill, 150, 150, format: 'jpg' %></div></td>
							<td>
								<div class="center-block" style="margin-top: 35px;margin-bottom: 35px;">
								<h3><%= cart.product.album %></h3>
								<%= form_for cart, url: user_cart_path(user_id: @user.id,id: cart.id) do |f| %>
								<%= f.number_field :quantity, min: 1, max: get_total_quantity(cart) , style:"height:32px; width:45px;border: 1px solid #adadad; border-radius: 5px;" %>
								<%= f.submit "変更", class: "btn btn-default" %>
						        <%= link_to "削除","/users/#{@user.id}/carts/#{cart.id}",  class: "btn btn-danger", method: :delete %><br>
						        <div class="center-block" style="margin-top: 10px;"><strong>小計　¥<%= get_subtotal(cart) %></strong></div>
						        </div>
						    </td>
					<% end %>
					</tr>
					<% end %>
				</tbody>
		</table>
</div>
</div>

<div class="row">
<div class="col-md-8 col-md-offset-2">
    <div class="col-md-7"></div>
    <div class="col-md-4">
		<h2 class="page-header">総計    ¥<%= get_price(@carts) %></h2>
	</div>
	<div class="col-md-1" style="padding-top: 40px;">
			<%= link_to "購入", new_user_order_path, class: "btn btn-success" %>
    </div>
</div>
</div>
</div>
<% end %>