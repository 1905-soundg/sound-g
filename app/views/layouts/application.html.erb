<!DOCTYPE html>
<html>
  <head>
    <title>SoundG</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </head>

<body>

    <header class="navbar navbar-fixed-top navbar-inverse", style="background-color: #00ff7f;border-color: white;padding: 0 0 0 0;">
    <div class="container">



    <% if user_signed_in? %>
      <div class="center-block" style="padding: 0 0 25px 0;">
        <nav class="nav navbar-nav navbar-left" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <%=link_to root_path do %>
        <h1>SoundG</h1>
        <% end %>
        </nav>
      </div>

        <!--------検索フォーム-------->

          <div class="input-group">
            <%= search_form_for @search do |f| %>
            <span class="input-group-btn">
            <%= f.text_field :album_cont, class: "form-control", placeholder:"テキスト入力欄"%>
            <button class="btn btn-default" type="submit" >
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </span>
            <% end %>
          </div>
          <!---------------->


       <nav class="nav navbar-nav navbar-right" style="padding: 0 0 0 0;">
       <div id="slidemenu">
         <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn" style="padding: 0 0 0 0;" >



              <li>
               ようこそ
                 <%= current_user.last_name %> <%= current_user.first_name %>
               様
             </li>
             <li>
               <%= link_to  '', user_carts_path(current_user.id), class: "glyphicon glyphicon-shopping-cart navbar-link",  style: "padding: 0 15px 0 30px;" %>
             </li>
             <li>
               <%= link_to 'mypage', user_path(current_user.id), class: "glyphicon glyphicon-user navbar-link", style: "padding: 0 15px 0 15px;" %>
             </li>
              <li>
               <%= link_to 'logout', destroy_user_session_path, class: "navbar-link glyphicon glyphicon-log-out ", style: "padding: 0 15px 0 15px;", method: :delete %>
             </li>
           <% else admin_signed_in? %>
             <div class="center-block" style="padding: 0 0 25px 0;">
             <nav class="nav navbar-nav navbar-left" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
               <h1>SoundG</h1>
             </nav>
             </div>


              <nav class="nav navbar-nav navbar-right" style="padding: 0 0 0 0;">
              <div id="slidemenu">
                <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn" style="padding: 0 0 0 0;" >
                    <li>
                      <%= link_to ' logout', destroy_admin_session_path, class: "glyphicon glyphicon-log-out navbar-link", style: "padding: 0 0 0 0;", method: :delete %>
                    </li>
            <% end %>
          </ul>
      </div>
    </nav>
    </div>
    </header>

<div class="wrapper">
   <%= yield %>
</div>

  <footer>
    <div class="container">
      <div class="row">
         <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
