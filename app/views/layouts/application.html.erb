<!DOCTYPE html>
<html>
  <head>
    <title>SoundG</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
    <header class="navbar navbar-fixed-top navbar-inverse", style="background-color: #00ff7f;">
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
      <span>SoundG</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
        <div id="slidemenu">
          <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
            <% if user_signed_in? %>
              <li class="">
                <p>ようこそ
                様</p>
              </li>
              <li class="">
                <%= link_to 'cart', class: "glyphicon glyphicon-shopping-cart" %>
              </li>
              <li class="">
                <%= link_to 'mypage', user_path(current_user.id), class: "glyphicon glyphicon-user" %>
              </li>
               <li class="">
                <%= link_to 'logout', destroy_user_session_path, class: "glyphicon glyphicon-log-out logout", method: :delete %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="">
                <%= link_to 'logout', destroy_admin_session_path, class: "glyphicon glyphicon-log-out logout", method: :delete %>
              </li>
            <% end %>
          </ul>
    </div>
  </div>
  </div>
  </header>

<div class="wrapper">
   <%= yield %>
</div>

  <footer>
    <div class="container">
      <div class="row">
         <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>