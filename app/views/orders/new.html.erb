<div class='row'>
<div class="col-md-8 col-md-offset-2">
    <div class="row">
    <div class="col-md-8 col-md-offset-2">
    	<h1>購入画面</h1>
		<p class="page-header">小計		¥<%= get_price(@carts) %></p>
		<p class="page-header">送料		¥<%= @fee %></p>
		<p class="page-header">請求額	¥<%= get_totalprice(@carts) %>(税込)</p>

        <h1>送付先選択</h1>
		<%= form_for @order, url:user_orders_path(user_id: @user) do |f| %>
		        <ul>
		        	<li>
		        	<label>
		        		<%= f.radio_button :address, @user.address  %>
		        			<%= @user.address %>
	                        <%= @user.postalcode %>
							<%= @user.last_name + @user.first_name %>
		        	</label>
		        	</li>
		        	<h3>送付先</h3>
		        	<% @addresses.each do |address| %>
		            <li>
	                <label>
	                <%= f.radio_button :address, "#{address.id} #{address.address}" %>
	                〒<%= address.postalcode %>
	                住所		<%= address.address %>
	                宛名		<%= address.name %>
	                </label>
		            </li>
		             <% end %>
		        </ul>

                <%= f.hidden_field :subtotal_price, :value => get_price(@carts) %>
				<%= f.hidden_field :fee, :value => @fee %>
				<%= f.hidden_field :order_status, :value => "販売中" %>

			<%= f.submit "購入" ,class: "btn-sm btn-primary" %>
        <% end %>
		</div>
		</div>
	</div>
    </div>
</div>
</div>