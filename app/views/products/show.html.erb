<div class="container">
	<div class="row">

		<div class="col-xs-7">
			<%= attachment_image_tag @product,:image, :fill,400,400, class: "img-rounded" %>

		</div>

   <div class="row">
   	<div class="col-xs-5">

   		<p> <%= @genre.genre %> </p>
   		<h2> <%= @product.album %> </h2>
   		<p> <%= @label.label %></p>
   		<p> ¥<%= @product.price %> </p>

   		<%= form_for (@cart) do |f| %>
   		<%= f.number_field :quantity, in: 0...101 %>
   		<%= f.hidden_field :product_id, :value => @product.id %>
   		<%= f.submit "カートに追加" %>
   		<% end %>


            <div class="d-inline">
               <% @discs.each do |d| %>
           <ul class="list-unstyled">
               <li>
                  ディスクNo.<%= d.disc_number %>
               </li>
                  <% d.musics.each do |m| %>
               <li>
                  <%= m.title %>
               </li>
               <% end %>
            </ul>
            <% end %>
         </div>

   	 </div>
    </div>

  </div>
</div>

<%= form_for (@review) do |r| %>
<h3>商品レビュー</h3>

<p>新規投稿</p>

<%= r.text_area :review, :size => "100" %>

<% end %>

<% @reviews.each do |r| %>
<h4>みんなのレビュー</h4>
<%= r.review %>
<% end %>