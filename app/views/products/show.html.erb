<div class="container">
	<div class="row">

		<div class="col-xs-7">
			<%= attachment_image_tag @product,:image, :fill,400,400, class: "img-rounded" %>

		</div>

   <div class="row">
   	<div class="col-xs-5">

   		<p> <%= @genre.genre %> </p>
   		<h2> <%= @product.album %> </h2>
   		<p> <%= @label.label %></p>
   		<p> ¥<%= @product.price %> </p>

   		<%= form_for (@cart) do |f| %>
   		<%= f.number_field :quantity, in: 0...101 %>
   		<%= f.hidden_field :product_id, :value => @product.id %>
   		<%= f.submit "カートに追加" %>
   		<% end %>




   		<table>

   			<% @disc.each do |d| %>
   			<thead>
   				<tr> ディスクNo.<%= d.disc_number %> </tr>
   			</thead>
   			<% d.musics.each do |m| %>
   			<tbody>
   				<td> <%= m.title %> </td>
   			</tbody>
   			<% end %>
   			<% end %>

   		</table>






   	 </div>
    </div>


  </div>
</div>

