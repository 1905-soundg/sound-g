<%= render 'layouts/header' %>
<div class="container">
<div class="row">
<div class="col-md-8 col-md-offset-2">
<div class="form-user style-1 rounded has-shadow-1">

      <div class="form-header text-center">
        <h2>Sign up</h2>
      </div>
      <div class="col-md-8 col-md-offset-2">

      <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="form-body">


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="col-md-4 col-md-offset-2" style="padding: 0 0 0 0;">

          <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
            <div class="col-md-4" style="margin-left: 15px;">
              <%= f.label :姓 %>
            </div>
            <div class="col-md-4" style="width:100px;margin-left: 35px;">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",  class: "form-control" %>
            </div>
          </div>


          <div class="field" style="padding-top: 20px;padding-bottom: 0px;margin:0 0 0 0;">
            <div class="col-md-4" style="margin-left: 15px;">
              <%= f.label :"姓(カナ)" %>
            </div>
            <div class="col-md-4" style="width:100px;margin-left: 35px;margin-right: 0px;">
              <%= f.text_field :last_name_k, autofocus: true, autocomplete: "last_name_k",  class: "form-control" %>
            </div>
           </div>

          </div>


          <div class="col-md-4 col-md-offset-2" style="padding: 0 0 0 0;margin-left: 50px;">

          <div class="field"  style="padding-top: 20px;padding-bottom: 20px;margin:0 0 0 0;">
            <div class="col-md-4" style="margin-right: 0px;">
              <%= f.label :名 %>
            </div>
            <div class="col-md-4" style="width:100px;margin-right: 30px;">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",  class: "form-control" %>
            </div>
          </div>

          <div class="field"  style="padding-top: 20px;padding-bottom: 0px;margin:0 0 0 0;">
            <div class="col-md-4" style="margin-right: 0px;">
              <%= f.label :"名(カナ)" %>
            </div>
            <div class="col-md-4" style="width:100px; margin-right: 30px;">
              <%= f.text_field :first_name_k, autofocus: true, autocomplete: "first_name_k",  class: "form-control" %>
            </div>
          </div>

          </div>


          <div class="col-md-8 col-md-offset-2">

            <div class="field" style="padding-top: 10px;padding-bottom: 20px;">
                <div class="col-md-3"><%= f.label :郵便番号%></div>
                <div class="col-md-9"><%= f.text_field :postalcode, autofocus: true, autocomplete: "postalcode",  class: "form-control" %></div>
            </div>

            <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
                <div class="col-md-3"><%= f.label :住所 %></div>
                <div class="col-md-9"><%= f.text_field :address, autofocus: true, autocomplete: "address", :size  => "80",  class: "form-control" %></div>
            </div>

            <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
                <div class="col-md-3"><%= f.label :電話番号 %></div>
                <div class="col-md-9"><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_numberx",  class: "form-control" %></div>
            </div>

            <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
                <div class="col-md-3"><%= f.label :email %></div>
                <div class="col-md-9"><%= f.email_field :email, autofocus: true, autocomplete: "email", :size  => "50",  class: "form-control" %></div>
            </div>

            <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
                <div class="col-md-3"><%= f.label :password %></div>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <div class="col-md-9"><%= f.password_field :password, autocomplete: "new-password",  class: "form-control" %></div>
            </div>

            <div class="field" style="padding-top: 20px;padding-bottom: 20px;">
                <div class="col-md-3"><%= f.label :password_confirmation %></div>
                <div class="col-md-9"><%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control" %></div>
            </div>

            <div class="actions" style="padding-top: 30px;padding-bottom: 0px;">
                <%= f.submit "Sign up", class: "btn btn-default", style:"width:460px;"   %>
            </div>
           <% end %>

          </div>

         <div class="col-md-8 col-md-offset-2" style="margin: 0 0 0 270px;padding: 0 0 0 0;">
         <%= render "users/shared/links" %>
         </div>

      </div>
</div>
</div>
</div>
</div>
