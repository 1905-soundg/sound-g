<%= render 'layouts/header' %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <div class="form-user style-1 rounded has-shadow-1">

      <div class="form-header text-center">
        <h2>Sign up</h2>
      </div>

      <div class="form-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

　　　　<fieldset class="names">
        <div class="gridcontainer">
            <div class="grid_2">
                       <input aria-required="true" aria-label="姓" type="text" id="last_name" name="last_name" value="" placeholder="姓" data-validatorgroup="names" class="">
                   </div><div class="grid_2">
                        <input aria-required="true" aria-label="名" type="text" placeholder="名" id="first_name" name="first_name" value="" data-validatorgroup="names" class="">
                    </div></div>

        </fieldset>

        <fieldset class="names">
        <div class="gridcontainer">
            <div class="grid_2">
                       <input aria-required="true" aria-label="姓(カナ)" type="text" id="last_name_k" name="last_name_k" value="" placeholder="姓(カナ)" data-validatorgroup="names" class="">
                   </div><div class="grid_2">
                        <input aria-required="true" aria-label="名(カナ)" type="text" placeholder="名(カナ)" id="first_name_k" name="first_name_k" value="" data-validatorgroup="names" class="">
                    </div></div>

        </fieldset>


           <div class="form-horizontal" role="form">
            <div class=”form-group”>
            <div class="col-xs-2">
              <%= f.label :姓 %><br />
            </div>
            <div class="col-xs-4">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
            </div>

            <div class=”form-group”>
            <div class="col-xs-2">
              <%= f.label :名 %>
            </div>
            <div class="col-xs-4">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
           </div>
           </div>
          </div>

           <div class="form-horizontal" role="form">
            <div class=”form-group”>
            <div class="col-xs-2">
              <%= f.label :"姓(カナ)" %>
            </div>
            <div class="col-xs-4">
              <%= f.text_field :last_name_k, autofocus: true, autocomplete: "last_name_k" %>
           </div>
           </div>

           <div class=”form-group”>
            <div class="col-xs-2">
              <%= f.label :"名(カナ)" %>
            </div>
            <div class="col-xs-4">
              <%= f.text_field :first_name_k, autofocus: true, autocomplete: "first_name_k" %>
           </div>
           </div>
         </div>

          <div class="field">
            <%= f.label :郵便番号 %>
            <%= f.text_field :postalcode, autofocus: true, autocomplete: "postalcode" %>
          </div>

          <div class="field">
            <%= f.label :住所 %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </div>

            <div class="field">
            <%= f.label :電話番号 %>
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_numberx" %>
          </div>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
</div>
</div>
</div>
</div>